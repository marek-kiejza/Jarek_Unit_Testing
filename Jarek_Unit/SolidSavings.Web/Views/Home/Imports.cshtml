@using SolidSavings.Web.Components
@using SolidSavings.Web.Models.Enums

@section navigation
    {
    @await Component.InvokeAsync(typeof(NavigationViewComponent), new { state = ApplicationState.Import })
}


@section body
    {
    <div class="col-10">
        <div class="row section-title">
            <div class="offset-md-1 col-md-6">
                <h1>Import</h1>
            </div>
        </div>
        <div class="row section-subtitle">
            <div class="offset-md-1 col-md-6">
                <h3>Tutaj możesz zaimportować dane z pliku do systemu</h3>
            </div>
        </div>
        <div class="row section-body">
            <div class="col-10 offset-1">
                <div class="card-group">
                    <form asp-action="ImportJson" asp-controller="Home" enctype="multipart/form-data"  method="post">
                        <div class="card">
                            <img class="card-img-top radar-raport-logo"
                                 src="https://upload.wikimedia.org/wikipedia/commons/c/c9/JSON_vector_logo.svg" />
                            <div class="card-body">
                                <h5 class="card-title">Import JSON</h5>
                                <div class="form-group">
                                    <input type="file" class="form-control" name="jsonImport" />
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="form-group">
                                    <input type="submit" class="form-control" value="importuj" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}